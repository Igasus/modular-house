{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Neo4j": {
    "Uri": "<stored-in-secrets>",
    "Auth": {
      "UserName": "<stored-in-secrets>",
      "Password": "<stored-in-secrets>"
    }
  },
  "AccessToken": {
    "Secret": "<stored-in-secrets>",
    "Issuer": "ModularHouse-AuthSystem",
    "Audience": "AllAudiences",
    "ExpirationTime": "12:00:00"
  },
  "Validation": {
    "UserCredentials": {
      "Password": {
        "MinimumLength": 8,
        "MaximumLength": 32,
        "MustContainUppercaseEnglishLetter": true,
        "MustContainLowercaseEnglishLetter": true,
        "MustContainDigit": true,
        "MustContainSpecialCharacter": true,
        "AllowedSpecialCharacters": "!@#$%^&*()-_=+,./\\|;:'\"`~<>[]{}"
      }
    }
  }
}
